<% gcp_project_id = "#{external_attribute(pwd, 'gcp_project_id', doc_generation)}" -%>
<% vertexai_dataset = grab_attributes(pwd)['sql_operation'] -%>
describe google_sql_operation(project: <%= gcp_project_id -%>project: <%= gcp_project_id -%>, region: <%= doc_generation ? "'#{vertexai_dataset['region']}'" : "vertexai_dataset['region']" -%>, name: <%= doc_generation ? "'#{vertexai_dataset['name']}'" : "vertexai_dataset['name']" -%>) do
  it { should exist }
  its('name') { should eq <%= doc_generation ? "'#{sql_operation['name']}'" : "vertexai_dataset['name']" -%> }
  its('status') { should eq <%= doc_generation ? "'#{sql_operation['status']}'" : "vertexai_dataset['status']" -%> }
end

describe google_sql_operation(, region: <%= doc_generation ? "'#{vertexai_dataset['region']}'" : "vertexai_dataset['region']" -%>, name: 'nonexistant') do
  it { should_not exist }
end